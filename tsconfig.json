{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "rootDir": "./",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
